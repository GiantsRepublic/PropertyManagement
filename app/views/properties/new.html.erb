<h1>Here to add your new property</h1>

<div id="form">

  <%= form_for :property, url: properties_path do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :date %><br>
      <%= f.text_field :date %>
    </p>

    <p>
      <%= f.label :price %><br>
      <%= f.text_field :price %>
    </p>

    <p>
      <%= f.label :user %><br>
      <%= f.text_field :user %>
    </p>

    <p>
      <%= f.label :status %><br>
      <%= f.text_field :status %>
    </p>

    <p>
      <%= f.submit %>
    </p>

  <% end %>
<%= link_to 'Cancel', properties_path %>

</div>
